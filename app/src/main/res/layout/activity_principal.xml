<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dam2.fje.edu.npuzzle_gimenez_colomo.View.PrincipalActivity"
    >


    <TextView
        android:text="\nBenvinguts a l’aplicació de NPUZZLE.\nSi us plau, seleccioneu una imatge fent click al icona de sota i després podeu iniciar el PUZZLE."
        android:layout_gravity="center_vertical|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPresApp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/bStart"
        android:background="@mipmap/arrow"
        android:elevation="0dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btOpenImage"
        android:layout_alignBottom="@+id/btOpenImage"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btOpenImage"
        android:background="@mipmap/galery_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/bStart" />

    <ImageView
        android:layout_height="match_parent"
        android:id="@+id/biblioImage"
        android:layout_marginTop="93dp"
        android:layout_below="@+id/txtPresApp"
        android:layout_alignParentStart="true"
        android:layout_width="200dp"
        android:layout_gravity="center"/>

    <TextView
        android:text="Imatge seleccionada:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/txtImatge"
        android:layout_below="@+id/txtPresApp"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

</RelativeLayout>
